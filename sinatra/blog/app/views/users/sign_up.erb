<h1>Sign up</h1>

<form action="/sign_up" method="post">
    <%= Rack::Csrf.tag(env) %>
	<p>Login: <input type="text" name="login"></p>
	<p>Email: <input type="text" name="email"></p>
	<p>Password: <input type="password" name="password"></p>
	<%= recaptcha_tags %>
	<input type="submit" value="Sign up">
</form>
