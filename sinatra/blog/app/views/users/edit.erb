<h1>Edit User</h1>

<form action="/users/<%= @user.id %>" method="post">
  <%= Rack::Csrf.tag(env) %>
  <input name='_method' type='hidden' value='put' />
  <p>Login: <input type="text" name="login" value="<%= @user.login %>"></p>
  <p>Email: <input type="text" name="email" value="<%= @user.email %>"></p>
  <button type="submit" class="button small" value="Update">Update</button>
</form>

<a href="/users/<%= @user.id %>">Back profile</a>