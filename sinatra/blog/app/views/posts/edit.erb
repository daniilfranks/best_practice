<h1>Edit post</h1>

<form action="/posts/<%= @post.id %>" method="post">
  <input name='_method' type='hidden' value='put' />
  <p>Title: <input type="text" name="post[title]" value="<%= @post.title %>"></p>
  <p>Description: <input type="text" name="post[description]" value="<%= @post.description %>"></p>
  <p>User_id: <input type="number" name="post[user_id]" value="<%= @post.user_id %>"></p>
  <input type="submit" value="Edit post">
</form>